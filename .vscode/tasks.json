{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "update packages",
			"type": "shell",
			"command": "npm i",
			"problemMatcher": "$tsc"
		},
		{
			"label": "build",
			"type": "shell",
			"command": "npm run build",
			"problemMatcher": "$tsc"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "node dist/index.js",
			"problemMatcher": "$tsc"
		}
	]
}